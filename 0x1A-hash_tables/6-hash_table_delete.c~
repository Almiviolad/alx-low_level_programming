#include "hash_tables.h"
/**
 *hash_table_delete - deletes entire hash tables
 *@ht: hash table
 */
void hash_table_delete(hash_table_t *ht)
{
	hash_node_t *current, *temp;
	unsigned long int i;

	if (ht == NULL)
	{
		return;
	}
	for (i = 0; i < ht->size; i++)
	{
		if (ht->array[i] != NULL)
		{
			current = ht->array[i];
			while (current != NULL)
			{
				temp = current->next;
				if (current->key != NULL)
					free(current->key);
				if (current\
->value != NULL)
				free(current->value);
					free(current);
				current = temp;
			}
		}
	}
	if (ht->array != NULL)
		free(ht->array);
	free(ht);
}
